                                        <ColumnDefinition MinWidth="30" Width="Auto" SharedSizeGroup="DataColumn6"/>
                                        <!-- 15 -->
                                        <ColumnDefinition Width="4" SharedSizeGroup="SplitterColumn7"/>
                                        <!-- 16 -->
                                        <ColumnDefinition MinWidth="30" Width="Auto" SharedSizeGroup="DataColumn7"/>
                                        <!-- 17 -->
                                        <ColumnDefinition Width="4" SharedSizeGroup="SplitterColumn8"/>
                                        <!-- 18 -->
