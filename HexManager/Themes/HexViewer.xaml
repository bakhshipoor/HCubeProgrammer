                                    <TextBlock Grid.Column="30" Text="0E" Style="{StaticResource HexHeaderTextBlock}"/>
                                    <TextBlock Grid.Column="32" Text="0F" Style="{StaticResource HexHeaderTextBlock}"/>
                                    <TextBlock Grid.Column="34" Grid.ColumnSpan="17" Text="ASCII" Style="{StaticResource HexHeaderTextBlock}"/>
                                    <Border Grid.ColumnSpan="51" BorderBrush="Gray" BorderThickness="0 0 0 2"/>
                                </Grid>
                                <Grid x:Name="PART_GrdHexCollectionData" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition SharedSizeGroup="AddressColumn"/>
                                        <ColumnDefinition SharedSizeGroup="SplitterColumn0"/>
                                        <ColumnDefinition SharedSizeGroup="DataColumn0"/>
                                        <ColumnDefinition SharedSizeGroup="SplitterColumn1"/>
                                        <ColumnDefinition SharedSizeGroup="DataColumn1"/>
                                        <ColumnDefinition SharedSizeGroup="SplitterColumn2"/>
                                        <ColumnDefinition SharedSizeGroup="DataColumn2"/>
