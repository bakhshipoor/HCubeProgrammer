<Window x:Class="HCubeProgrammer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCubeProgrammer"
        xmlns:HexMgr="clr-namespace:HexManager;assembly=HexManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <HexMgr:HexViewer x:Name="HWFile" BorderBrush="Beige" />
        <!--<HexMgr:HexByte Width="100" Height="50" DisplayMode="HexString" HexByteText="FF"/>-->
        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Address"  />
                <DataGridTextColumn Header="00" />
                <DataGridTextColumn Header="01" />
                <DataGridTextColumn Header="02" />
                <DataGridTextColumn Header="03" />
                <DataGridTextColumn Header="04" />
                <DataGridTextColumn Header="05" />
                <DataGridTextColumn Header="06" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Window>
