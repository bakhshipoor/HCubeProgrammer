            <HexMgr:HexViewerItem Content="01C01A524103098B4201D30B01C01AA2"/>
            <HexMgr:HexViewerItem Content="29F7D076E7704703460B437FD400"/>

        </HexMgr:HexViewer>

        <HexMgr:HexByte Grid.Row="1" 
                        DisplayMode="BinaryString" 
                        Data="255" 
                        CanEdit="True"
                        Width="30" 
                        Height="30"/>
        
    </Grid>
</Window>
